{
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "deny-Creation-of-untagged-resources",
    "properties": {
      "mode": "indexed",
      "displayName": "Deny Creation of untagged resources",
      "description": "This policy deny the Creation of the untagged resources",
      "policyRule": {
        "if": {
            "field": "tags",
            "exists": "false"
          },
        "then":{
           "effect": "deny"     
        }  
      }     
    }
}